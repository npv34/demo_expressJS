
<!-- include file template  -->
<%- include('../layout/header.ejs', { pageTitle: 'Danh sách người dùng' }) %>

<div class="container">
    <%- include('../layout/navbar.ejs') -%>
    <div class="card">
        <div class="card-header">
            Thêm mới người dùng
        </div>
        <div class="card-body">
            <form action="/admin/users/create" method="post">
                <div class="form-group">
                    <label for="">Tên</label>
                    <input type="text" class="form-control" name="name" id="" aria-describedby="" placeholder="">
                </div>
                <div class="form-group">
                    <label for="">Email address</label>
                    <input type="email" class="form-control" name="email" id="" aria-describedby="" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="">
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/admin/users" class="btn btn-info">Trở về</a>
            </form>
        </div>
    </div>
</div>

